# BCal SAAS Environment Configuration
# Copy this file to .env.saas and update the values

# Database Configuration
POSTGRES_PASSWORD=your-secure-postgres-password
LICENSING_POSTGRES_PASSWORD=your-secure-licensing-postgres-password

# Application Security
SECRET_KEY=your-super-secret-jwt-key-change-in-production
LICENSE_SERVER_SECRET=your-licensing-server-secret-key
LICENSING_API_KEY=your-licensing-api-key-change-in-production

# Stripe Configuration (Required for billing)
STRIPE_ENABLED=true
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration (Recommended)
EMAIL_ENABLED=true
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# Multi-tenancy Configuration
ENABLE_MULTI_TENANCY=true
DEFAULT_ORGANIZATION_NAME=Default Organization
TRIAL_DAYS=14
MAX_ORGANIZATIONS=1000

# Auth0 Configuration (Optional)
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret
AUTH0_AUDIENCE=your_auth0_api_identifier

# Google Calendar Integration (Optional)
GOOGLE_CALENDAR_ENABLED=false
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/auth/google/callback

# Video Conferencing (Optional)
VIDEO_CONFERENCING_ENABLED=false
ZOOM_API_KEY=your_zoom_api_key
ZOOM_API_SECRET=your_zoom_api_secret
TEAMS_WEBHOOK_URL=your_teams_webhook_url

# SSL Configuration (Production)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Domain Configuration
# MAIN_DOMAIN=bcal.com
# ALLOWED_DOMAINS=bcal.com,*.bcal.com

# Performance Tuning
# WORKERS=4
# MAX_CONNECTIONS=1000
# REDIS_MAX_CONNECTIONS=50

# Monitoring and Logging
# SENTRY_DSN=your_sentry_dsn
# LOG_LEVEL=INFO
# ENABLE_METRICS=true

# Backup Configuration (Recommended for production)
# BACKUP_ENABLED=true
# BACKUP_S3_BUCKET=your-backup-bucket
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
